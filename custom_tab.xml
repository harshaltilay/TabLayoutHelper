<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/badgeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/icon_tab_layout_item_badge_padding_left"
            android:paddingEnd="@dimen/icon_tab_layout_item_badge_padding_right"
            android:background="@drawable/icon_tab_layout_item_badge_background"
            android:textColor="@color/colorIconTabLayoutItemBadgeText"
            android:textSize="@dimen/icon_tab_layout_item_badge_font_size"
            android:visibility="invisible"/>
    </RelativeLayout>
    <TextView
        android:fontFamily="@font/poppins"
        android:id="@+id/titleView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        />
</LinearLayout>
